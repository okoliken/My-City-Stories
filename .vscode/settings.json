{
    "files.associations": {
      "*.swift": "swift"
    },
    "swift.sourcekit-lsp.serverPath": "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/bin/sourcekit-lsp",
    "sourcekit-lsp.toolchainPath": "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain",
    "sourcekit-lsp.serverArguments": [
      "--log-level",
      "info"
    ],
    "[swift]": {
      "editor.defaultFormatter": "sswg.swift-language",
      "editor.tabSize": 4,
      "editor.insertSpaces": true,
      "editor.formatOnSave": true
    },
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    }
  }